<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>guy762_KotORFaction_MercGuild</defName>
    <label>mercenary guild</label>
    <pawnSingular>mercenary</pawnSingular>
    <pawnsPlural>mercenaries</pawnsPlural>
    <categoryTag>Pirate</categoryTag>
    <canMakeRandomly>false</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
	<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <hidden>true</hidden>
    <description>An independent mercenary company composed of locals, offworlders, and outlaws.</description>
    <factionIconPath>World/ScumAndVillainy</factionIconPath>
    <factionNameMaker>NamerFactionPirate</factionNameMaker>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
    <colorSpectrum>
      <li>(0.93, 0.39, 0.32)</li>
      <li>(0.35, 0.90, 0.57)</li>
      <li>(0.25, 0.66, 0.94)</li>
      <li>(0.98, 0.75, 0.37)</li>
      <li>(0.97, 0.62, 0.52)</li>
    </colorSpectrum>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <maxCountAtGameStart>3</maxCountAtGameStart>
    <techLevel>Spacer</techLevel>
	<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
	
    <allowedCultures>
		<li>Kriminul</li>
	</allowedCultures>
	
	<allowedMemes>
		<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
	</allowedMemes>
	<disallowedPrecepts>
		<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Essential</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Important</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Worthwhile</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">DrugUse_Prohibited</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Abhorrent</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Horrible</li>
	</disallowedPrecepts>
	
	<basicMemberKind>KotORMerc_merc</basicMemberKind>
	<leaderTitle>boss</leaderTitle>
	<fixedLeaderKinds>
		<li>KotORMerc_gangboss</li>
	</fixedLeaderKinds>
	
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.33</commonality>
      </li>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
        <commonality>0.33</commonality>
      </li>
	  <li>
        <categories>
          <li>Pirate</li>
        </categories>
		<commonality>0.33</commonality>
      </li>
    </backstoryFilters>
    <settlementTexturePath>World/WorldObjects/Expanding/SettlementTemporary</settlementTexturePath>
	
	
	
	
	
	
	
	
	
	
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	
	<pawnGroupMakers>
	
	  <li>
        <!-- quick raid -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
		<disallowedStrategies>
			<li>Siege</li>
			<li>StageThenAttack</li>
			<li>ImmediateAttackSappers</li>
			<li>ImmediateAttackBreaching</li>
			<li>ImmediateAttackBreachingSmart</li>
		</disallowedStrategies>
        <options>
          <KotORMerc_merc>50</KotORMerc_merc>
          <KotORMerc_warrior>100</KotORMerc_warrior>
          <KotORMerc_sniper>50</KotORMerc_sniper>
		  <KotORMerc_demo>75</KotORMerc_demo>
          <KotORMerc_commando>10</KotORMerc_commando>
          <KotORMerc_elite>5</KotORMerc_elite>
        </options>
      </li>
	  
	  <li>
        <!-- skirmish -->
        <kindDef>Combat</kindDef>
        <commonality>75</commonality>
		<disallowedStrategies>
			<li>Siege</li>
			<li>ImmediateAttackSmart</li>
			<li>ImmediateAttackSappers</li>
			<li>ImmediateAttackBreaching</li>
			<li>ImmediateAttackBreachingSmart</li>
		</disallowedStrategies>
        <options>
          <KotORMerc_merc>100</KotORMerc_merc>
          <KotORMerc_warrior>75</KotORMerc_warrior>
          <KotORMerc_sniper>25</KotORMerc_sniper>
          <KotORMerc_commando>10</KotORMerc_commando>
          <KotORMerc_elite>5</KotORMerc_elite>
        </options>
      </li>
	  
	  <li>
        <!-- territory intrusion -->
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
		<disallowedStrategies>
			<li>ImmediateAttack</li>
			<li>ImmediateAttackSmart</li>
			<li>ImmediateAttackSappers</li>
			<li>ImmediateAttackBreaching</li>
			<li>ImmediateAttackBreachingSmart</li>
		</disallowedStrategies>
        <options>
          <KotORMerc_merc>100</KotORMerc_merc>
          <KotORMerc_warrior>25</KotORMerc_warrior>
          <KotORMerc_sniper>75</KotORMerc_sniper>
          <KotORMerc_commando>10</KotORMerc_commando>
          <KotORMerc_elite>5</KotORMerc_elite>
        </options>
      </li>
	  
	  <li>
        <!-- assault -->
        <kindDef>Combat</kindDef>
        <commonality>25</commonality>
		<disallowedStrategies>
			<li>Siege</li>
			<li>StageThenAttack</li>
			<li>ImmediateAttack</li>
		</disallowedStrategies>
        <options>
          <KotORMerc_merc>50</KotORMerc_merc>
          <KotORMerc_warrior>25</KotORMerc_warrior>
          <KotORMerc_demo>50</KotORMerc_demo>
          <KotORMerc_commando>100</KotORMerc_commando>
          <KotORMerc_elite>25</KotORMerc_elite>
		  <KotORMerc_sapper>75</KotORMerc_sapper>
        </options>
      </li>
	  
	  
	  
	</pawnGroupMakers>
	
	
  </FactionDef>

</Defs>