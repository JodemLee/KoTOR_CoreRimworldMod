<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>guy762_KotORFaction_Trandoshans</defName>
    <label>Trandoshan slaver guild</label>
    <pawnSingular>Trandoshan</pawnSingular>
    <pawnsPlural>Trandoshans</pawnsPlural>
    <categoryTag>Pirate</categoryTag>
    <canMakeRandomly>false</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
	<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <hidden>true</hidden>
    <description>A group of Trandoshan slavers and pirates.</description>
    <factionIconPath>World/Trandoshan</factionIconPath>
    <factionNameMaker>NamerFactionPirate</factionNameMaker>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
    <colorSpectrum>
      <li>RGB(245,220,20)</li>
    </colorSpectrum>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <techLevel>Spacer</techLevel>
	<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
	
	<allowedCultures>
		<li>guy762_culture_trandoshan</li>
	</allowedCultures>
	
	
	
	<requiredMemes>
		<li MayRequire="Ludeon.RimWorld.Ideology">Structure_TheistAbstract</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
	</requiredMemes>
	
	<allowedMemes>
		<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
	</allowedMemes>
	
	<disallowedPrecepts>
		<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Essential</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Important</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Charity_Worthwhile</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">DrugUse_Prohibited</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Abhorrent</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Horrible</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Required</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">KillingInnocentAnimals_Abhorrent</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">KillingInnocentAnimals_Horrible</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">KillingInnocentAnimals_Disapproved</li>
		
		<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Abhorrent</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Horrible</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Disapproved</li>
		
		<li MayRequire="erdelf.HumanoidAlienRaces">HAR_AlienSlavery_Abhorrent</li>
		<li MayRequire="erdelf.HumanoidAlienRaces">HAR_AlienSlavery_Horrible</li>
		<li MayRequire="erdelf.HumanoidAlienRaces">HAR_AlienSlavery_Disapproved</li>
	</disallowedPrecepts>
	
	
   
	
	<basicMemberKind>MercTrando_slaver</basicMemberKind>
	<leaderTitle>guildmaster</leaderTitle>
    <leaderTitleFemale>guildmistress</leaderTitleFemale>
	<fixedLeaderKinds>
		<li>MercTrando_veteran</li>
	</fixedLeaderKinds>
	
    <backstoryFilters>
	  <li>
        <categories>
          <li>Pirate</li>
        </categories>
		<commonality>1</commonality>
      </li>
    </backstoryFilters>
    <settlementTexturePath>World/WorldObjects/Expanding/SettlementTemporary</settlementTexturePath>
	
	
	<modExtensions>
      <li Class="VFECore.FactionDefExtension">
		<startingGoodwillByFactionDefs>
			<guy762_KotORFaction_Militia>-100</guy762_KotORFaction_Militia>
			<guy762_KotORFaction_MercGuild>-75~-50</guy762_KotORFaction_MercGuild>
		</startingGoodwillByFactionDefs>
		<excludeFromCommConsole>true</excludeFromCommConsole>
      </li>
    </modExtensions>
	
	
	
	
	
	
	
	
	
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	
	<pawnGroupMakers>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Hunters</kindDef>
        <commonality>1</commonality>
        <options>
          <MercTrando_slaver>100</MercTrando_slaver>
          <MercTrando_veteran>25</MercTrando_veteran>
        </options>
      </li>
	  <li>
        <!-- slaver raid -->
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
		<disallowedStrategies>
			<li>Siege</li>
			<li>StageThenAttack</li>
			<li>ImmediateAttackSappers</li>
			<li>ImmediateAttackBreaching</li>
			<li>ImmediateAttackBreachingSmart</li>
		</disallowedStrategies>
        <options>
          <MercTrando_grunt>50</MercTrando_grunt>
          <MercTrando_slaver>100</MercTrando_slaver>
          <MercTrando_merc>25</MercTrando_merc>
          <MercTrando_ham>10</MercTrando_ham>
        </options>
      </li>
	  <li>
        <!-- elite slaver raid -->
        <kindDef>Combat</kindDef>
        <commonality>25</commonality>
		<disallowedStrategies>
			<li>Siege</li>
			<li>StageThenAttack</li>
			<li>ImmediateAttack</li>
		</disallowedStrategies>
        <options>
          <MercTrando_grunt>10</MercTrando_grunt>
          <MercTrando_slaver>50</MercTrando_slaver>
          <MercTrando_merc>75</MercTrando_merc>
          <MercTrando_ham>25</MercTrando_ham>
          <MercTrando_veteran>100</MercTrando_veteran>
        </options>
      </li>
	</pawnGroupMakers>
  </FactionDef>

</Defs>