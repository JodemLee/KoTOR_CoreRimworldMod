	<!-- Brith -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<ThingDef ParentName="AnimalThingBase">
		<defName>KOTOR_brithBase</defName>
		<label>brith</label>
		<description>The brith were a species of large, flying creatures that were indigenous to the grassy Outer Rim world of Dantooine. Their fin-like wings gave them the appearance of swimming through the air. The brith were similar in both appearance and behavior to the Felucian flying manta and, to a lesser extent, the thrantas of Alderaan.</description>
		<statBases>
			<MoveSpeed>10</MoveSpeed>
			<MarketValue>500</MarketValue>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>35</ComfyTemperatureMax>
			<FilthRate>0</FilthRate>
		</statBases>
		<tools>
			<li>
				<label>head</label>
				<capacities>
				<li>Blunt</li>
					</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<race>
			<body>KOTOR_BodyGlider</body>
			<baseHungerRate>0.5</baseHungerRate>
			<baseBodySize>0.5</baseBodySize>
			<baseHealthScale>0.5</baseHealthScale>
			<foodType>OmnivoreAnimal</foodType>
			<leatherDef>kotor_leather_brith</leatherDef>
			<wildness>0.1</wildness>
			<trainability>None</trainability>
			<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0</manhunterOnDamageChance>
			<gestationPeriodDays>10</gestationPeriodDays>
			<nameOnTameChance>1</nameOnTameChance>
			<lifeExpectancy>10</lifeExpectancy>
			<herdAnimal>true</herdAnimal>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.3</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.55</minAge>
					<soundWounded>kotor_brith_wounded</soundWounded>
					<soundDeath>kotor_brith_death</soundDeath>
					<soundCall>kotor_brith_calls</soundCall>
					<soundAngry>kotor_brith_angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>kotor_brith_hit</soundMeleeHitPawn>
			<soundMeleeHitBuilding>kotor_brith_hit</soundMeleeHitBuilding>
			<soundMeleeMiss>kotor_brith_miss</soundMeleeMiss>
			<headPosPerRotation>
				<li>(-0.02, 0, 0.1)</li>
				<li>(0.28, 0, 0.02)</li>
				<li>(0.0, 0, 0.02)</li>
				<li>(-0.28, 0, 0.02)</li>
			</headPosPerRotation>
		</race>
	</ThingDef>

