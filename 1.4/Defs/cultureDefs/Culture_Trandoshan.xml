		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">guy762_IdeoNameMaker_trandoshan</ideoNameMaker>
		<deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">guy762_DeityNameMaker_trandoshan</deityNameMaker>
		<deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">guy762_DeityTypeMaker_trandoshan</deityTypeMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">guy762_LeaderTitleMaker_trandoshan</leaderTitleMaker>
