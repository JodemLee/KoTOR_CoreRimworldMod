	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>guy762_IdeoNameMaker_trandoshan</defName>
		<rulePack>
			<rulesStrings>
				<li>r_ideoName->Scorekeeper's Hunters</li>
				<li>r_ideoAdjective->Trandoshan</li>
				<li>r_memberName->Scorekeeper's hunter</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
